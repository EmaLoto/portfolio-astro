---
import { info, neon } from "../Solutions/Constantes"
import Hexagono from "../Icons/Extra/Hexagono.astro"
import Avatar from "./Avatar.astro"

---
<section class="min-h-screen flex flex-col py-32 max-lg:py-32">
    <section class="flex justify-center gap-3 mx-auto py-5 max-lg:px-10 max-lg:flex-row-reverse max-lg:justify-evenly">
        <section class="w-1/12 my-auto max-lg:w-1/4">
            <Avatar size="w-auto" />
        </section>
        <section class="w-1/3 my-auto max-lg:w-1/2">
            <h1 class="text-4xl m-auto">Expericiencia laboral</h1>
        </section>
    </section>
    
    {
        info.experiencia.map ( (exp) => {
            return(
            <section class="group flex justify-center gap-5 p-10 max-lg:flex-col max-lg:px-12 animate-fade-right hover:bg-black hover:bg-opacity-30 transition-all">
                <section class="w-1/12 max-lg:hidden">
                    <Hexagono size="w-20 h-auto m-auto" />
                </section>
                <section class="flex flex-col w-1/3 max-lg:w-auto">
                    <h1 class="text-2xl" style={neon}>{exp.cargo}</h1>
                    <h1 class="text-xl">{exp.lugar}</h1>
                    <p>{exp.fechas}</p>
                </section>
                <section class="flex w-1/4 max-lg:w-auto">
                    <p class="text-lg my-auto">{exp.descripcion}</p>
                </section>
            </section>
            )              
        })
    }   
</section>
