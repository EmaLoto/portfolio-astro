---
import { ViewTransitions } from 'astro:transitions'
import Header from './Header.astro'
import Footer from './Footer.astro'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio Caleb Emanuel Loto" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class='bg-black bg-opacity-20 bg-cover bg-no-repeat bg-fixed text-white min-h-screen content-between' style="background-image: url('./background.jpg');">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
